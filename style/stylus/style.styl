@import 'import/mixin'
@import 'import/fonts'

*
	margin 0
	padding 0
*::selection {
	background: rgba(0, 0, 0, 0);
}
html
	background bg_color
h1
	unisans-b()
	font-size 50px
	color pink_text
h2
	unisans-b()
	font-size 30px
	color #FFF
	padding-bottom 10px

/********* Common CSS ***********/

.clearfix
	zoom: 1
.clearfix:before,
.clearfix:after
	content: ""
	display: table
.clearfix:after
	clear both

.sp_10
	width 100%
	height 10px
.sp_20
	width 100%
	height 20px
.sp_30
	width 100%
	height 30px
.sp_40
	width 100%
	height 40px
.sp_50
	width 100%
	height 50px
.sp_60
	width 100%
	height 60px

/*********************************/

main
	max-width 1200px
	min-width 400px
	margin auto
	#main_header
		text-align center
		margin-top 20px
		p
			unisans-b()
			font-size 18px
			color pink_text
		.img_login2030
			border-radius 100%
	.main_foto
		display block
		margin auto
	#sertificate, #contact
		text-align center
		a
			display inline-block
			width 50px
			height 50px
			color #FFF
			border-radius 100%
			line-height 52px
			text-decoration none
			unisans-b()
			font-size 16px
			&.vk
				background #55779B
			&.gb
				background #4C5D6E
	#contact
		a
			&.inline-block
				display inline-block
			svg
				width 45px
				height 45px
			&.svg_skype
				path
					fill #00ACEC
				&:hover
					path
						fill #00ACEC - 20%
			&.svg_vk
				path
					fill #55779B
				&:hover
					path
						fill #55779B - 20%
			&.svg_email,
			&.svg_tel
				width auto
				svg
					float left
				path
					fill #C0C0C0 - 30%
				p
					float left
					font-size 20px
					padding-left 15px
					color #C0C0C0 - 30%
				&:hover
					path
						fill #C0C0C0
					p
						color #C0C0C0
	#my_skill
		text-align center
		.item_skill
			display inline-block !important
			position relative
			cursor pointer
			.i_s
				position absolute
				width 100%
				text-align center
				top 41%
				unisans-b()
				font-size 15px
				&_0
					color #F1642C
				&_1
					color #109FDB
				&_2
					color #FBBC05
				&_3
					color #4F5B93
	#works_wrapper
		h2
			text-align center
	#works
		.item_wrapper
			box-sizing border-box
			float left
			width (100 / 3)%
			padding 30px
			padding-top 0
			.item
				background #595B4F
				color #FFF
				unisans-b()
				font-size 15px
				line-height 1.3
				text-align center
				img
					display block
					width 100%
				.desc
					padding 20px
					& > a
						display block
						padding-top 15px
						font-size 12px
						color #2CA6CB
						text-decoration none
						transition()
						&:hover
							color #FFF
							transition()
				h3
					font-size 22px
					a
						display inline-block
						padding 7px 10px
						border 1px solid #CCC
						color #FFF
						text-decoration none
						transition()
						&:hover
							background #2CA6CB
							transition()

#my_stack
		text-align center
		.wpapper_circles
			display inline-block
			padding-right 30px
			padding-left 30px
			.circle
				display table
				float left
				text-decoration none
				margin-left 5px
				margin-bottom 5px
				border-radius 100%
				cursor pointer
				transition(0.5s)
				p
					transition(0.5s)
					display table-cell
					vertical-align middle
					unisans-b()
					color #FFF
					font-size 14px
				&:hover
					transform rotate(360deg)
					transition(0.5s)
					p
						color bg_color
						transition(0.5s)
				&:first-child
					margin-left 0

#main_footer
	margin-top 50px

/**************************************/
/************** globals **************/
/**************************************/
.global_popup
	display none
	position fixed
	background rgba(0, 0, 0, 0.8)
	top 0
	left 0
	width 100%
	height 100%
	.popup_content
		background #FFF
		width 100px
		height 100px
		margin-top -100%
		margin-right auto
		margin-left auto
	&.active
		.popup_content
			margin-top 100px

@import 'import/media'